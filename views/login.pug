extends layout

block content
  div(class="h-screen w-screen flex flex-col md:flex-row items-center")
    div(class="md:h-screen w-full flex flex-col justify-center items-center")
      div(class="md:translate-5 bg-white border drop-shadow-md xl:w-2/3 w-5/6 rounded-md p-8 h-min items-center")
        h1(class="font-medium text-2xl") Login

        form(action='/login' method='POST')
          .form-group 
            label(for="email") Email: 
            input#email.form-control(type="text" name="email" value=usuario.email class=errors.email ? "is-invalid":"")
            if errors.email
              small#emailHelp.text-danger 
                = errors.email.message

          .form-group 
            label(for="pwd") Password: 
            input#pwd.form-control(type="password" name="password" class=errors.password ? "is-invalid":"")
            if errors.password
              small#passwordHelp.text-danger 
                = errors.password.message
          br
          br
          a(href="/forgotPassword") ¿Olvido su contraseña?
          br

          // Aquí se inserta el captcha
          != captcha
          br
          if usuario
            small#recaptchaHelp.text-danger= errors.recaptcha
          br
          if errors.login
            small#loginHelp.text-danger= errors.login
          br
          input#submitBtn.btn.btn-primary(type="submit" value="OK")
    div(class="static w-full bg-banner bg-cover bg-center")
      <div class="absoluted w-full h-full inset-0 bg-black bg-opacity-50"></div>
  
  

   
      